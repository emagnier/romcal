{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "ES2020",
      "ESNext"
    ],
    "moduleResolution": "node",
    "rootDir": ".",
    "removeComments": true,
    "declaration": true,
    "declarationDir": "tmp/dts",
    "emitDeclarationOnly": true,
  },
  "include": [
    "lib/**/*",
    "tmp/bundles/**/*"
  ],
}
