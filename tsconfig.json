{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@romcal/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["__tests__", "**/*.test.ts", "dist", "coverage", "node_modules"]
}
