{
  "compilerOptions": {
    "target": "es5",
    "diagnostics": true,
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": false,
    "traceResolution": true,
    "resolveJsonModule": true,
    "lib": [
      "ES5",
      "ES6",
      "ES7",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ESNext",
      "ESNext.Symbol",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "allowJs": true,
    "rootDir": "./src",
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "noEmit": false,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@RomcalRoot/*": ["src/*"],
      "@RomcalLib/*": ["src/lib/*"],
      "@RomcalTypes/*": ["src/types/*"],
      "@RomcalConstants/*": ["src/constants/*"],
      "@RomcalEnums/*": ["src/enums/*"],
      "@RomcalUtils/*": ["src/utils/*"],
      "@RomcalValidators/*": ["src/validators/*"],
      "@RomcalModels/*": ["src/models/*"],
      "@RomcalLocales/*": ["src/locales/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["dist/**/*", "src/**/*.test.ts", "coverage/**/*"]
}
