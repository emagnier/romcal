{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "traceResolution": true,
    "lib": [
      "ES5",
      "ES6",
      "ES7",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ESNext",
      "ESNext.Symbol",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "./src",
    "noEmit": false,
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "dayjs/*": ["node_modules/dayjs/*"],
      "@RomcalTypes/*": ["src/types/*"],
      "@RomcalConstants/*": ["src/constants/*"],
      "@RomcalEnums/*": ["src/enums/*"],
      "@RomcalUtils/*": ["src/utils/*"],
      "@RomcalValidators/*": ["src/validators/*"],
      "@RomcalModels/*": ["src/models/*"]
    },
    "types": ["lodash-es", "bcp-47", "core-js", "number-to-words", "dayjs", "inversify", "jsonschema"]
  },
  "include": ["typings/*", "src/**/*.ts"],
  "exclude": ["dist/**/*", "coverage/**/*"]
}
