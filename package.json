{
  "name": "romcal",
  "version": "3.0.0-alpha.0",
  "description": "Generates liturgical calendars of the Roman Rite of the Roman Catholic Church.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">= 14.16 <=16"
  },
  "scripts": {
    "clean": "rimraf coverage dist tmp",
    "lint": "eslint . --ext .ts",
    "prebuild": "npm run lint",
    "build": "npm run bundle && npm run type && npm run pack",
    "bundle": "rimraf tmp && node -r ts-node/register lib/scripts/build-bundles.ts",
    "type": "node --max-old-space-size=4096 ./node_modules/typescript/bin/tsc -p tsconfig.release.json && node -r ts-node/register lib/scripts/organize-dist-files.ts",
    "pack": "node --max_old_space_size=6144 ./node_modules/webpack/bin/webpack.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romcal/romcal.git"
  },
  "keywords": [
    "roman",
    "catholic",
    "calendar",
    "latin",
    "western",
    "church",
    "christian",
    "seasons",
    "liturgical"
  ],
  "author": {
    "name": "Julian Pereira",
    "email": "bleushade@gmail.com",
    "url": "https://github.com/pejulian"
  },
  "contributors": [
    {
      "name": "Etienne Magnier",
      "email": "etienne.magnier@gmail.com",
      "url": "https://github.com/emagnier"
    },
    {
      "name": "Tukusejâ€™s Sirs",
      "email": "tukusejssirs@protonmail.com",
      "url": "https://github.com/tukusejssirs"
    }
  ],
  "bugs": {
    "url": "https://github.com/romcal/romcal/issues"
  },
  "homepage": "https://github.com/romcal/romcal/blob/master/README.md",
  "dependencies": {
    "dayjs": "^1.10.5",
    "i18next": "^20.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.15.3",
    "@types/cli-progress": "^3.9.2",
    "@types/glob": "^7.1.4",
    "@types/jest": "~26.0.23",
    "@types/node": "~14.14.45",
    "@types/rimraf": "^3.0.2",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "~4.25.0",
    "@typescript-eslint/parser": "~4.25.0",
    "babel-loader": "^8.2.2",
    "cli-progress": "^3.9.0",
    "eslint": "~7.27.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-jest": "~24.3.6",
    "glob": "^7.1.7",
    "jest": "~27.0.4",
    "jest-extended": "^0.11.5",
    "parallel-webpack": "github:emagnier/parallel-webpack#patch-1",
    "prettier": "~2.3.1",
    "rimraf": "~3.0.2",
    "terser-webpack-plugin": "^5.1.4",
    "ts-jest": "~27.0.3",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "tsutils": "~3.21.0",
    "typescript": "~4.3.4",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  },
  "volta": {
