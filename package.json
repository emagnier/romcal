{
    "name": "romcal",
    "version": "1.3.1-canary.71",
    "description": "Utility library that outputs the Liturgical Calendar used by the Roman Rite (Western Church)",
    "types": "dist/esm/index.d.js",
    "main": "dist/esm/romcal.js",
    "engines": {
        "node": ">=12"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "prepublishOnly": "npm run build && npm run typedoc",
        "build": "npm run clean:dist && npm run build:es5 && npm run build:esm && npm run tsc:defs",
        "clean:dist": "rimraf dist/**",
        "build:es5": "cross-env TS_NODE_PROJECT=\"./config/tsconfig.webpack.json\" webpack --config \"./config/webpack.config.es5.ts\" --mode production ",
        "build:esm": "cross-env TS_NODE_PROJECT=\"./config/tsconfig.webpack.json\" webpack --config \"./config/webpack.config.esm.ts\" --mode production ",
        "lint": "pretty-quick --staged && lint-staged",
        "test": "jest --colors",
        "test:watch": "jest --colors --watch",
        "updateChangelog": "auto-changelog -p",
        "typedoc": "typedoc --options typedoc.json",
        "esm-bundle-report": "webpack-bundle-analyzer --port 4200 dist/esm/stats.json",
        "es5-bundle-report": "webpack-bundle-analyzer --port 4200 dist/es5/stats.json"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "./node_modules/.bin/eslint --cache --fix",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/romcal/romcal.git"
    },
    "keywords": [
        "roman",
        "catholic",
        "calendar",
        "latin",
        "western",
        "church",
        "christian",
        "seasons",
        "liturgical"
    ],
    "author": {
        "name": "Julian Pereira",
        "email": "bleushade@gmail.com",
        "url": "https://github.com/pejulian"
    },
    "contributors": [
        {
            "name": "Etienne Magnier",
            "email": "etienne.magnier@gmail.com",
            "url": "https://github.com/emagnier"
        },
        {
            "name": "Jacek Roszkowski",
            "url": "https://github.com/jarosz"
        },
        {
            "name": "Tukusejâ€™s Sirs",
            "email": "tukusejssirs@protonmail.com",
            "url": "https://github.com/tukusejssirs"
        }
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/romcal/romcal/issues"
    },
    "homepage": "https://github.com/romcal/romcal/blob/master/README.md",
    "dependencies": {
        "bcp-47": "^1.0.7",
        "core-js": "^3.6.4",
        "dayjs": "^1.8.20",
        "jsonschema": "^1.2.5",
        "lodash-es": "^4.17.15",
        "number-to-words": "^1.2.4",
        "regenerator-runtime": "^0.13.3"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.6",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
        "@babel/preset-env": "^7.8.6",
        "@babel/preset-typescript": "^7.8.3",
        "@types/bcp-47": "^1.0.0",
        "@types/core-js": "^2.5.3",
        "@types/html-webpack-plugin": "^3.2.2",
        "@types/jest": "^25.1.2",
        "@types/lodash-es": "^4.17.3",
        "@types/node": "^13.7.6",
        "@types/number-to-words": "^1.2.0",
        "@types/rewire": "^2.5.28",
        "@types/webpack": "^4.41.6",
        "@types/webpack-bundle-analyzer": "^2.13.3",
        "@types/webpack-merge": "^4.1.5",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
        "@typescript-eslint/parser": "^2.19.2",
        "auto-changelog": "^1.16.2",
        "babel-loader": "^8.0.6",
        "babel-plugin-const-enum": "0.0.5",
        "cross-env": "^7.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-you-dont-need-lodash-underscore": "^6.9.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^25.1.0",
        "jest-extended": "^0.11.5",
        "jest-transform-stub": "^2.0.0",
        "lint-staged": "^10.0.7",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1",
        "rewire": "^4.0.1",
        "rimraf": "^3.0.2",
        "semver": "^7.1.1",
        "ts-jest": "^25.2.0",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.6.2",
        "tsconfig-paths": "^3.9.0",
        "tslib": "^1.11.1",
        "typedoc": "^0.16.10",
        "typescript": "^3.8.3",
        "webpack": "^4.41.6",
        "webpack-bundle-analyzer": "^3.6.0",
        "webpack-cli": "^3.3.11",
        "webpack-merge": "^4.2.2"
    }
}
