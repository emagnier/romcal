{
    "name": "romcal",
    "version": "1.3.1-canary.39",
    "description": "Utility library that outputs the Liturgical Calendar used by the Roman Rite (Western Church)",
    "main": "dist/index.js",
    "module": "src/index.js",
    "engines": {
        "node": ">=8"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "scripts": {
        "prepublishOnly": "npm run build",
        "build": "webpack --colors --mode production",
        "lint": "tsc --noEmit && eslint './src/**/*.{js,ts,tsx}' --quiet --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "updateChangelog": "auto-changelog -p"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "./node_modules/.bin/eslint — fix",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/romcal/romcal.git"
    },
    "keywords": [
        "roman",
        "catholic",
        "calendar",
        "latin",
        "western",
        "church",
        "christian",
        "seasons",
        "liturgical"
    ],
    "author": {
        "name": "Julian Pereira",
        "email": "bleushade@gmail.com",
        "url": "https://github.com/pejulian"
    },
    "contributors": [
        {
            "name": "Etienne Magnier",
            "email": "etienne.magnier@gmail.com",
            "url": "https://github.com/emagnier"
        },
        {
            "name": "Jacek Roszkowski",
            "url": "https://github.com/jarosz"
        },
        {
            "name": "Tukusej’s Sirs",
            "email": "tukusejssirs@protonmail.com",
            "url": "https://github.com/tukusejssirs"
        }
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/romcal/romcal/issues"
    },
    "homepage": "https://github.com/romcal/romcal/blob/master/README.md",
    "dependencies": {
        "lodash": "^4.17.15",
        "moment": "^2.24.0",
        "moment-range": "^4.0.2",
        "moment-recur-ts": "^1.3.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@types/jest": "^25.1.2",
        "@types/lodash": "^4.14.149",
        "@types/node": "^13.7.0",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
        "@typescript-eslint/parser": "^2.19.2",
        "auto-changelog": "^1.16.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "jest": "^25.1.0",
        "lint-staged": "^10.0.7",
        "prettier": "^1.19.1",
        "semver": "^7.1.1",
        "source-map-loader": "^0.2.4",
        "ts-jest": "^25.2.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.7.5",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10"
    }
}
